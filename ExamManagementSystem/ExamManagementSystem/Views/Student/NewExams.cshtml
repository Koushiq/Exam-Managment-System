@model IEnumerable<ExamManagementSystem.Models.DataAccess.Exam>

@{
    ViewBag.Title = "Scheduled Exams";
}

<h2>Scheduled Exams</h2>

@if (Model.Count() == 0)
{
    <p>There are currently no exams scheduled for this course.</p>
}
else
{
    <table class="table" border="1">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalMarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section.SectionName)
            </th>
            <th>
                Actions
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ExamName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalMarks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section.SectionName)
                </td>
                <td>
                    @Html.ActionLink("Start Exam", "StartExam", new { eid = item.Id })
                </td>
            </tr>
        }

    </table>
}
<br />
@Html.ActionLink("Back", "CourseList")
